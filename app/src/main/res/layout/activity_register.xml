<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <TextView
            android:id="@+id/textViewAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24*7 Health care"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="73dp"
            android:textColor="@color/purple_200" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textViewBMBPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="150dp"
            android:textColor="@color/colorWhite" tools:ignore="MissingConstraints"/>


    <EditText
            android:id="@+id/editTextAppContactNumber"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppAddress"
            android:layout_marginTop="40dp" android:layout_marginStart="40dp"/>

    <EditText
            android:id="@+id/editTextAppFees"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppContactNumber"
            android:layout_marginTop="28dp" tools:layout_editor_absoluteX="42dp" tools:ignore="MissingConstraints"/>

    <EditText
            android:id="@+id/editTextAppFullname"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBMBPackageName"
            android:layout_marginTop="20dp" android:layout_marginStart="48dp"/>


    <EditText
            android:id="@+id/editTextAppAddress"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBMBPackageName"
            android:layout_marginTop="92dp" android:layout_marginStart="48dp"/>
    <Button
            android:id="@+id/buttonBookAppointment"
            android:layout_width="324dp"
            android:layout_height="41dp"
            android:background="@drawable/btn_bg"
            android:text="Register"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppFees"
            android:layout_marginTop="40dp"
            tools:layout_editor_absoluteX="48dp" tools:ignore="MissingConstraints"/>

    <TextView
            android:id="@+id/textViewExistingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Already have an account"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/buttonBookAppointment"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="138dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>