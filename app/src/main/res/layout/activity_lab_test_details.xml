<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1"
        tools:context=".LabTestDetailsActivity">

    <TextView
            android:id="@+id/textViewLDPPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 * 7 Health care"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008" app:layout_constraintHorizontal_bias="0.496"/>


    <TextView
            android:id="@+id/textViewDDTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deliver Location : Pune"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal_bias="0.01999998"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.1"/>

    <TextView
            android:id="@+id/textViewDDTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lab test and package"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal_bias="0.01999998"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.167"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.891"
            android:id="@+id/buttonLDTBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLDPPackageName"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.85" android:text="BACK"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            android:id="@+id/buttonLDTGoToCart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewLDPPackageName"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.85" android:text="GO to cart"/>

    <EditText
            android:id="@+id/editTextLDTTextMultiLine"
            android:layout_width="290dp"
            android:layout_height="372dp"
            android:layout_marginTop="20dp"
            android:editable="false"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:text="testing"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintTop_toBottomOf="@+id/textViewLDPPackageName"/>


    <EditText
            android:id="@+id/editTextLDTTotalCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing1"
            android:textColor="@color/yellowLight"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.517"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintBottom_toTopOf="@+id/buttonLDTGoToCart"
            app:layout_constraintTop_toBottomOf="@+id/editTextLDTTextMultiLine"/>









</androidx.constraintlayout.widget.ConstraintLayout>