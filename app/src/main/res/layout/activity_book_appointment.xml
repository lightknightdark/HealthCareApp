<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".BookAppointmentActivity" tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="0dp">


    <TextView
            android:id="@+id/textViewAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24*7 Health care"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/purple_200" tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/textViewApp"
            android:layout_marginTop="24dp" android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/textViewApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="@+id/editTextAppFullname" android:layout_marginTop="23dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAppTitle"/>
    <EditText
            android:id="@+id/editTextAppContactNumber"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Contact Number"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppAddress"
            android:layout_marginTop="40dp" android:layout_marginStart="40dp"/>

    <EditText
            android:id="@+id/editTextAppFees"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:ems="10"
            android:hint="Fee"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppContactNumber"
            android:layout_marginTop="28dp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp" android:layout_marginEnd="39dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/editTextAppFullname"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Full Name"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewApp"
            android:layout_marginTop="20dp" android:layout_marginStart="48dp"/>


    <EditText
            android:id="@+id/editTextAppAddress"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Address"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewApp"
            android:layout_marginTop="92dp" android:layout_marginStart="48dp"/>

    <Button
            android:id="@+id/buttonBookAppointment"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/btn_bg"
            android:text="Book Appointment"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppFees"
            android:layout_marginTop="28dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="42dp" android:layout_marginEnd="42dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/buttonAppBack"
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:background="@drawable/btn_bg"
            android:text="BACK"
            app:layout_constraintTop_toBottomOf="@+id/editTextAppFees"
            android:layout_marginTop="80dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" android:layout_marginEnd="43dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:id="@+id/textView3"
            android:text="select date"
            android:textColor="@color/yellowLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/buttonAppBack"
            android:layout_marginTop="28dp" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAppBack"/>
    <TextView
            android:id="@+id/textView4"
            android:text="select time"
            android:textColor="@color/yellowLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/buttonAppBack"
            android:layout_marginTop="32dp" android:layout_marginStart="196dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonAppBack"/>
    <Button
            android:id="@+id/buttonAppDate"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/01/2023"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="264dp" android:layout_marginBottom="84dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:id="@+id/buttonAppTime"
            style="?android:spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="92dp" android:layout_marginBottom="84dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>