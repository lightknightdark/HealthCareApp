<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back1"
        tools:context=".HealthArticlesDetailsActivity">

    <TextView
            android:id="@+id/textViewHADName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24 * 7 Health care"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008" app:layout_constraintHorizontal_bias="0.496"/>



    <TextView
            android:id="@+id/textViewHADTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artices"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal_bias="0.01999998"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.167"/>


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:id="@+id/buttonHADBack"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewHAD"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="0.534" android:text="BACK"/>
    <ImageView
            android:layout_width="239dp"
            android:layout_height="173dp"  android:id="@+id/imageViewHAD"
            tools:layout_editor_absoluteY="262dp" tools:layout_editor_absoluteX="77dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>