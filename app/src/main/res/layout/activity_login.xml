<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".LoginActivity">

    <TextView
            android:id="@+id/textViewAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24*7 Health care"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="73dp"
            android:textColor="@color/purple_200" tools:ignore="MissingConstraints"/>


    <TextView
            android:id="@+id/textViewApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="150dp"
            android:textColor="@color/colorWhite" tools:ignore="MissingConstraints"/>

    <EditText
            android:id="@+id/editTextLoginPassword"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLoginUsername"
            android:layout_marginTop="44dp" android:layout_marginStart="48dp"/>
    <EditText
            android:id="@+id/editTextLoginUsername"
            android:layout_width="330dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:drawablePadding="10dp"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewApp"
            android:layout_marginTop="24dp" android:layout_marginStart="40dp"/>


    <Button
            android:id="@+id/buttonLogin"
            android:layout_width="324dp"
            android:layout_height="41dp"
            android:background="@drawable/btn_bg"
            android:text="Login"
            app:layout_contstrainEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextLoginPassword" android:layout_marginTop="44dp"
            android:layout_marginStart="56dp"/>

    <TextView
            android:id="@+id/textViewNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:text="Register for new user"
            android:textColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin" tools:layout_editor_absoluteX="138dp"
            tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>